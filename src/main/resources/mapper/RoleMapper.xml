<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.apdoer.manager.mapper.RoleMapper">
    <resultMap id="BaseResultMap" type="org.apdoer.manager.model.pojo.RolePo">
        <id column="id" jdbcType="INTEGER" property="roleId"/>
        <result column="password" jdbcType="VARCHAR" property="name"/>
        <result column="username" jdbcType="VARCHAR" property="roleDesc"/>
        <result column="phone" jdbcType="VARCHAR" property="createTime"/>
        <result column="email" jdbcType="VARCHAR" property="enabled"/>
    </resultMap>

    <resultMap id="roleMap" type="org.apdoer.manager.model.vo.RoleVo">
        <id column="role_id" jdbcType="INTEGER" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="role_desc" jdbcType="VARCHAR" property="desc"/>
        <result column="enabled" jdbcType="INTEGER" property="enabled"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
    </resultMap>
    <resultMap id="permMap" type="org.apdoer.manager.model.vo.PermissionVo">
        <id column="perm_id" jdbcType="INTEGER" property="permId"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="value" jdbcType="VARCHAR" property="value"/>
        <result column="parent_id" jdbcType="INTEGER" property="parentId"/>
    </resultMap>
    <resultMap id="roleIdDescMap" type="org.apdoer.manager.model.vo.RoleIdDescVo">
        <id column="perm_id" jdbcType="INTEGER" property="roleId"/>
        <result column="role_desc" jdbcType="VARCHAR" property="desc"/>
    </resultMap>


    <select id="queryAllPerm" resultMap="permMap">
        SELECT
            perm_id,
            `NAME`,
            `VALUE`,
            parent_id
        FROM
            biz_permission
        WHERE
            enabled = 1;
    </select>
    <select id="queryRoleList" resultType="org.apdoer.manager.model.vo.RoleVo">
        SELECT
            role_id,
            `name`,
            role_desc,
            enabled,
            create_time
        FROM
            biz_role
        WHERE
            role_desc LIKE "%"#{desc}"%";
    </select>
    <select id="queryAllCreatedRole" resultMap="roleIdDescMap">
        SELECT
            role_id,
            role_desc
        FROM
            biz_role
        WHERE
            enabled = 1;
    </select>
    <select id="queryUserByRoleId" resultType="java.lang.Integer">
        SELECT
            user_id
        FROM
            biz_user_role
        WHERE
            role_id = #{roleId}
    </select>


</mapper>